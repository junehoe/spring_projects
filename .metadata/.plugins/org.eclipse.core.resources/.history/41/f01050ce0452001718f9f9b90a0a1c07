package com.junehoe.displaydate.controllers;

import java.text.SimpleDateFormat;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class HomeController {

	@RequestMapping("/")
	public String index() {
		return "index.jsp";
	}
	
	@RequestMapping("/date")
	public String date(Model model) {
		SimpleDateFormat dayName = new SimpleDateFormat("EEEE");
		SimpleDateFormat dayNumber = new SimpleDateFormat("d");
		SimpleDateFormat monthName = new SimpleDateFormat("MMMMM");
		SimpleDateFormat yearPattern = new SimpleDateFormat("yyyy");
		String day = dayName.format(new Date());
		return "showDate.jsp";
	}
	
	@RequestMapping("/time")
	public String time(Model model) {
		return "showTime.jsp";
	}
}
